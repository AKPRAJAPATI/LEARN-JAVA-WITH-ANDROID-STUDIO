<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".T_speech_to_text.text_to_speech_output">


    <EditText
        android:id="@+id/textToSpeechEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Speechbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Speech"
        app:layout_constraintEnd_toEndOf="@+id/textToSpeechEditText"
        app:layout_constraintStart_toStartOf="@+id/textToSpeechEditText"
        app:layout_constraintTop_toBottomOf="@+id/textToSpeechEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>